<h1>Order</h1>

<table id="order-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Quantity</th>
    </tr>
  </thead>

  <tbody>
    <% @order.line_items.each do |li| %>
      <tr>
        <td><%= link_to li.book.title, li.book %></td>
        <td><%= li.book.price.format %></td>
        <td><%= li.quantity %></td>
      </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td><strong>Total:</strong><%= @order.total.format %></td>
      <td></td>
  </tbody>
</table>


<hr />
<% render 'finish_form' %>

<hr />

<% if ! @order.completed? %>
<%= link_to 'Edit order', edit_order_path(@order) %> |
<% end %>
<%= link_to 'Back to book list', books_path %>
