<p id="notice"><%= notice %></p>

<h1>Listing Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Published date</th>
      <th>Author</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.published_date %></td>
        <td><%= book.author %></td>
        <td><%= book.category %></td>
        <td><%= link_to 'Show', book %></td>
      </tr>
    <% end %>
    <%= paginate @books %>
  </tbody>
</table>
